rule raxmltree:
    input:
        tree="RAxML_bestTree.tree",
        fasta="snp_fasta/all.fasta"
    output:
        "RAxML_result.output"
    threads: 20
    shell:
        "raxmlHPC-PTHREADS-SSE3 -T {threads} -f e -m GTRGAMMA -s {input.fasta} -t {input.tree} -n output --no-bfgs"


rule raxml2:
    input:
        partitions = 'partitions.csv',
        phy = 'concat.phy'
    output:
        'RAxML_bestTree.outRaxml'
    shell:"""
        module load raxml/8.2.4
        raxml -T 24 -m PROTGAMMAWAG -s {input.phy} -n outRaxml -p 12345 -q {input.partitions} -x 12345 -f a -# 100



rule align_protein:
    input:
        'prot/{sample}.fasta'
    output:
        'muscled/{sample}.fasta'
    shell:"""
        muscle -in {input} -out {output}
    """


